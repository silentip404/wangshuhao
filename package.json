{
  "name": "wangshuhao",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.24.0",
  "engines": {
    "node": "24.11.0",
    "pnpm": ">=10"
  },
  "volta": {
    "node": "24.11.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "run-s lint:*",
    "lint:node-version": "pnpm exec node scripts/verify-node-version-sync.ts",
    "lint:typesync": "pnpm exec node scripts/typesync.ts",
    "lint:lockfile": "pnpm exec node scripts/verify-lockfile-sync.ts",
    "lint:knip": "knip --no-progress",
    "lint:tsc": "tsc --noEmit",
    "lint:eslint": "eslint --max-warnings=0",
    "lint:prettier": "prettier --check --log-level=warn .",
    "lint:success-message": "pnpm exec node scripts/cli-print-message.ts --type=success --title=\"All linting checks completed successfully.\"",
    "fix": "run-s --continue-on-error fix:*",
    "fix:typesync": "pnpm exec node scripts/typesync.ts --fix",
    "fix:knip": "knip --no-progress --fix",
    "fix:eslint": "eslint --fix",
    "fix:prettier": "prettier --write --log-level=warn .",
    "fix:complete-message": "pnpm exec node scripts/cli-print-message.ts --type=info --title=\"All fixing tasks completed, please review the output above.\"",
    "eslint:inspector": "eslint-config-inspector",
    "eslint:validate": "cross-env SORT_BY=warnings eslint --config=eslint.config.validate.ts --format=summary",
    "eslint:validate:inspector": "eslint-config-inspector --config=eslint.config.validate.ts"
  },
  "dependencies": {
    "next": "16.0.7",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "remeda": "2.32.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/types": "^20.0.0",
    "@eslint/config-inspector": "^1.4.2",
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/signale": "~1.4.7",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-config-flat-gitignore": "^2.1.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-formatter-summary": "^2.0.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-depend": "^1.4.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsonc": "^2.21.0",
    "husky": "^9.1.7",
    "jsonc-eslint-parser": "^2.4.1",
    "knip": "^5.70.2",
    "lint-staged": "^16.2.7",
    "minimatch": "^10.1.1",
    "npm-run-all2": "^8.0.4",
    "only-allow": "^1.2.1",
    "pkg-types": "^2.3.0",
    "postcss": "^8.5.6",
    "postcss-load-config": "^6.0.1",
    "prettier": "3.7.4",
    "read-yaml-file": "^2.1.0",
    "signale": "^1.4.0",
    "tailwindcss": "^4.1.17",
    "ts-command-line-args": "^2.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "typesync": "^0.14.3",
    "zod": "^4.1.13"
  }
}
