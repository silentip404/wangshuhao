{
  "extends": ["./tsconfig.base.json", "@tsconfig/next/tsconfig.json"],
  "compilerOptions": {
    "tsBuildInfoFile": "./scratch/tsc/tsconfig.app.tsbuildinfo",
    "target": "ES2024",
    "jsx": "react-jsx",
    "types": ["node"],
    "allowJs": false,
    "noEmit": true,
  },
  "references": [{ "path": "./tsconfig.lib.json" }],
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
  ],
}
