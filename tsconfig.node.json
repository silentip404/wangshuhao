{
  "extends": [
    "./tsconfig.base.json",
    "@tsconfig/node24/tsconfig.json",
    "@tsconfig/node-ts/tsconfig.json",
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./scratch/tsc/tsconfig.node.tsbuildinfo",
    "target": "ES2024",
    "types": ["node"],
    "checkJs": true,
    "noEmit": true,
  },
  "references": [{ "path": "./tsconfig.lib.json" }],
  "include": ["*.js", "*.ts", "node/**/*.ts"],
}
